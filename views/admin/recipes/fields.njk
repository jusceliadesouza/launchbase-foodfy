<div class="card-form item">
    <h3>Imagem da receita</h3>

    <input 
        type="text"
        name="image"
        speelcheck="true"
        value={{recipe.image}}
    >
</div>

<div class="card-form item">
    <h3>Título</h3>
    <input 
        type="text"
        name="title"
        speelcheck="true"
        value="{{recipe.title}}"
    >
</div>

<div class="card-form item">
    <h3>Autor</h3>
    <input 
        type="text"
        name="author"
        value="{{recipe.author}}"
    >
</div>

<div class="card-form item">
    <h3>Ingredientes</h3>
    
    <div id="ingredients"> 
        <div class="ingredient">
            {% if recipe.ingredients %}
                {% for item in recipe.ingredients %}
                    <input 
                        type="text"
                        name="ingredients[]"
                        value="{{item}}"
                    >
                {% endfor %}
            {% else %}
                <input 
                    type="text"
                    name="ingredients[]"
                    value=""
                >
            {% endif %}
        </div>
    </div>

    <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
</div>

<div class="card-form item">
    <h3>Modo de Preparo</h3>

    <div id="preparation"> 
        <div class="step">
            {% if recipe.preparation %}
                {% for step in recipe.preparation %}
                    <input 
                        type="text" 
                        name="preparation[]" 
                        value="{{step}}" 
                    /> 
                {% endfor %}
            {% else %}
                <input 
                    type="text" 
                    name="preparation[]" 
                    value="" 
                />
            {% endif %}
        </div>
    </div>

    <button type="button" class="add-step">Adicionar novo passo</button>
</div>

<div class="card-form item">
    <h3>Informações adicionais</h3>

    <div class="additionalInfo">
        {% if recipe.information %}
            <textarea name="information">{{recipe.information}}</textarea>
        {% else %}
            <textarea name="information"></textarea>
        {% endif %}
    </div>

</div>